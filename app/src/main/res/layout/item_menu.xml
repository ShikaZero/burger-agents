<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBurger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/photoMenuId"
        android:layout_width="95dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titleMenuId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/line_awesome"
        android:text="TextView"
        android:textStyle="bold"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintStart_toEndOf="@+id/photoMenuId"
        app:layout_constraintTop_toTopOf="@+id/photoMenuId" />

    <TextView
        android:id="@+id/descriptionMenuId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/line_awesome"
        android:text="TextView"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintStart_toStartOf="@+id/titleMenuId"
        app:layout_constraintTop_toBottomOf="@+id/titleMenuId" />

    <TextView
        android:id="@+id/priceMenuId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/line_awesome"
        android:text="TextView"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintStart_toStartOf="@+id/descriptionMenuId"
        app:layout_constraintTop_toBottomOf="@+id/descriptionMenuId" />

    <TextView
        android:id="@+id/addMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text=""
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/removeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintEnd_toEndOf="@+id/addMenu"
        app:layout_constraintTop_toBottomOf="@+id/addMenu" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>



