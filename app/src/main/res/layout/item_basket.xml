<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/photoMenuBasket"
        android:layout_width="75dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titleMenuBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/line_awesome"
        android:text="TextView"
        android:textStyle="bold"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintBottom_toBottomOf="@+id/photoMenuBasket"
        app:layout_constraintStart_toEndOf="@+id/photoMenuBasket"
        app:layout_constraintTop_toTopOf="@+id/photoMenuBasket" />

    <TextView
        android:id="@+id/priceBasketMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/line_awesome"
        android:text="TextView"
        app:fontFamily="@font/line_awesome"
        app:layout_constraintBottom_toBottomOf="@+id/titleMenuBasket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleMenuBasket" />

</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



